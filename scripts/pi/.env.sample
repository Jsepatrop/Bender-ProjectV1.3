# Bender Audio Configuration - Raspberry Pi 5
# Copiez ce fichier vers .env.local et adaptez les valeurs

# === CONFIGURATION I²S ===
# Pinouts fixes selon spécifications Bender
BENDER_I2S_BCLK_GPIO=18
BENDER_I2S_LRCLK_GPIO=19
BENDER_I2S_DIN_GPIO=20
BENDER_I2S_DOUT_GPIO=21

# === CONFIGURATION AUDIO ===
# Fréquences d'échantillonnage
BENDER_AUDIO_RATE_CAPTURE=48000
BENDER_AUDIO_RATE_PLAYBACK=48000
BENDER_AUDIO_RATE_ASR=16000

# Formats audio
BENDER_AUDIO_FORMAT=S32_LE
BENDER_AUDIO_CHANNELS=2

# === CONFIGURATION AEC ===
# Paramètres WebRTC AEC
BENDER_AEC_ENABLED=true
BENDER_AEC_NOISE_SUPPRESSION=true
BENDER_AEC_VOICE_DETECTION=true
BENDER_AEC_HIGH_PASS_FILTER=true
BENDER_AEC_DELAY_AGNOSTIC=true

# === CONFIGURATION VAD ===
# Voice Activity Detection
BENDER_VAD_ENABLED=true
BENDER_VAD_AGGRESSIVENESS=2
BENDER_VAD_FRAME_DURATION=30

# === CONFIGURATION PIPEWIRE ===
# Paramètres de performance
BENDER_PW_QUANTUM=1024
BENDER_PW_MIN_QUANTUM=32
BENDER_PW_MAX_QUANTUM=2048
BENDER_PW_RT_PRIO=88

# === CONFIGURATION ALSA ===
# Devices ALSA
BENDER_ALSA_CARD=0
BENDER_ALSA_DEVICE=0

# === TESTS AUDIO ===
# Durées des tests
BENDER_TEST_CAPTURE_DURATION=5
BENDER_TEST_PLAYBACK_DURATION=3

# Seuils de validation
BENDER_TEST_MIN_FILE_SIZE=100000
BENDER_TEST_MAX_SILENCE_DB=-60

# === CHEMINS ===
# Répertoires de travail
BENDER_AUDIO_TEMP_DIR=/tmp/bender_audio
BENDER_AUDIO_LOG_DIR=/var/log/bender
BENDER_AUDIO_CONFIG_DIR=~/.config/bender

# === MQTT (pour intégration future) ===
# Configuration MQTT pour le pipeline audio
BENDER_MQTT_HOST=192.168.1.138
BENDER_MQTT_PORT=1883
BENDER_MQTT_TOPIC_PREFIX=bender/audio

# === DEBUG ===
# Niveau de debug
BENDER_DEBUG_LEVEL=INFO
BENDER_DEBUG_AUDIO_DUMP=false
BENDER_DEBUG_PIPEWIRE_LOG=false